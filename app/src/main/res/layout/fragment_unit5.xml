<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context=".FragmentUnit5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Enhanced Header with Card View -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/Baby_Blue"
            app:cardElevation="0dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="16dp">

                <View
                    android:id="@+id/hline1"
                    android:layout_width="60dp"
                    android:layout_height="2dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/colorAccent" />

                <TextView
                    android:id="@+id/unitSlogan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title5"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/hline2"
                    android:layout_width="60dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/colorAccent" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Learning Path with Connecting Lines -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Level 1 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ch5_level1"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="160dp"
                android:layout_marginTop="36dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="42.5dp"
                app:cardElevation="6dp"
                app:rippleColor="@color/colorAccent_light"
                app:strokeColor="@color/colorAccent"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/star" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level 1"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Path Line 1 -->
            <View
                android:id="@+id/path_line1"
                android:layout_width="100dp"
                android:layout_height="3dp"
                android:layout_below="@id/ch5_level1"
                android:layout_alignStart="@id/ch5_level1"
                android:layout_marginStart="-60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/dotted_line"
                android:rotation="-45" />

            <!-- Level 2 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ch5_level2"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_below="@id/ch5_level1"
                android:layout_marginStart="100dp"
                android:layout_marginTop="50dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="42.5dp"
                app:cardElevation="6dp"
                app:rippleColor="@color/colorAccent_light"
                app:strokeColor="@color/colorAccent"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/star" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level 2"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Talking Image with Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/talking_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ch5_level1"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/ch5_level2"
                android:backgroundTint="@color/Baby_Blue"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/talking" />
            </androidx.cardview.widget.CardView>

            <!-- Path Line 2 -->
            <View
                android:id="@+id/path_line2"
                android:layout_width="100dp"
                android:layout_height="3dp"
                android:layout_below="@id/ch5_level2"
                android:layout_alignStart="@id/ch5_level2"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/dotted_line"
                android:rotation="45" />

            <!-- Level 3 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ch5_level3"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_below="@id/talking_card"
                android:layout_marginStart="150dp"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="42.5dp"
                app:cardElevation="6dp"
                app:rippleColor="@color/colorAccent_light"
                app:strokeColor="@color/colorAccent"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/star" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level 3"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Path Line 3 -->
            <View
                android:id="@+id/path_line3"
                android:layout_width="100dp"
                android:layout_height="3dp"
                android:layout_below="@id/ch5_level3"
                android:layout_alignStart="@id/ch5_level3"
                android:layout_marginStart="-60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/dotted_line"
                android:rotation="-45" />

            <!-- Presentation Image with Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/presentation_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ch5_level3"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/Baby_Blue"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/presentation" />
            </androidx.cardview.widget.CardView>

            <!-- Level 4 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ch5_level4"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignTop="@id/presentation_card"
                android:layout_marginStart="40dp"
                android:layout_marginTop="45dp"
                android:layout_toEndOf="@id/presentation_card"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="42.5dp"
                app:cardElevation="6dp"
                app:rippleColor="@color/colorAccent_light"
                app:strokeColor="@color/colorAccent"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/star" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level 4"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Path Line 4 -->
            <View
                android:id="@+id/path_line4"
                android:layout_width="100dp"
                android:layout_height="3dp"
                android:layout_below="@id/ch5_level4"
                android:layout_alignStart="@id/ch5_level4"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/dotted_line"
                android:rotation="45" />

            <!-- Level 5 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ch5_level5"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_below="@id/presentation_card"
                android:layout_marginStart="170dp"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="42.5dp"
                app:cardElevation="6dp"
                app:rippleColor="@color/colorAccent_light"
                app:strokeColor="@color/colorAccent"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/star" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level 5"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Path Line 5 -->
            <View
                android:id="@+id/path_line5"
                android:layout_width="100dp"
                android:layout_height="3dp"
                android:layout_below="@id/ch5_level5"
                android:layout_alignStart="@id/ch5_level5"
                android:layout_marginStart="-70dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/dotted_line"
                android:rotation="-45" />

            <!-- Level 6 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ch5_level6"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_below="@id/ch5_level5"
                android:layout_marginStart="100dp"
                android:layout_marginTop="25dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="42.5dp"
                app:cardElevation="6dp"
                app:rippleColor="@color/colorAccent_light"
                app:strokeColor="@color/colorAccent"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/star" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level 6"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Grateful Image with Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/grateful_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ch5_level5"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/ch5_level6"
                android:backgroundTint="@color/Baby_Blue"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/grateful" />
            </androidx.cardview.widget.CardView>

            <!-- Path Line 6 -->
            <View
                android:id="@+id/path_line6"
                android:layout_width="80dp"
                android:layout_height="3dp"
                android:layout_below="@id/ch5_level6"
                android:layout_alignStart="@id/ch5_level6"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/dotted_line"
                android:rotation="90" />

            <!-- Test Node -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ch5_test"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@id/ch5_level6"
                android:layout_marginStart="95dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="45dp"
                app:cardElevation="8dp"
                app:rippleColor="@color/colorPrimary_light"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/test" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TEST"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>