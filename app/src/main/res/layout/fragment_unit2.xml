<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context=".FragmentUnit2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="4dp">

            <View
                android:id="@+id/hline1"
                android:layout_width="85dp"
                android:layout_height="1dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="10dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/unitSlogan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/title2"
                android:textSize="16sp" />

            <View
                android:id="@+id/hline2"
                android:layout_width="85dp"
                android:layout_height="1dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="10dp"
                android:background="@color/black" />
        </LinearLayout>


        <ImageView
            android:id="@+id/ch2_level1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/unit_border"
            android:padding="20dp"
            android:src="@drawable/star" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/greeting" />

            <ImageView
                android:id="@+id/ch2_level2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/unit_border"
                android:padding="20dp"
                android:src="@drawable/star" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ch2_level3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/unit_border"
            android:padding="20dp"
            android:src="@drawable/star" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ch2_level4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/unit_border"
            android:padding="20dp"
            android:src="@drawable/star" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/high_five" />
    </LinearLayout>

        <ImageView
            android:id="@+id/ch2_level5"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="100dp"
            android:background="@drawable/unit_border"
            android:padding="20dp"
            android:src="@drawable/star" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/business" />

        <ImageView
            android:id="@+id/ch2_level6"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/unit_border"
            android:padding="20dp"
            android:src="@drawable/star" />

        <ImageView
            android:id="@+id/ch2_test"
            android:layout_width="78dp"
            android:layout_height="75dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/unit_border"
            android:padding="20dp"
            android:src="@drawable/test" />
    </LinearLayout>



    </LinearLayout>
</ScrollView>