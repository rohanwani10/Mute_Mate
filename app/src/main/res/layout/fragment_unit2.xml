<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_unit2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context=".FragmentUnit2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Enhanced Header with Card View -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Baby_Blue"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="16dp">

                <View
                    android:id="@+id/hline1"
                    android:layout_width="60dp"
                    android:layout_height="2dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/colorAccent" />

                <TextView
                    android:id="@+id/unitSlogan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title2"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/hline2"
                    android:layout_width="60dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/colorAccent" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Learning Path with Connecting Lines -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Level 1 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ch2_level1"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="40dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="42.5dp"
                app:cardElevation="6dp"
                app:rippleColor="@color/colorAccent_light"
                app:strokeColor="@color/colorAccent"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/star" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level 1"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Path Line 1 -->
            <View
                android:id="@+id/path_line1"
                android:layout_width="100dp"
                android:layout_height="3dp"
                android:layout_below="@id/ch2_level1"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="-30dp"
                android:layout_toStartOf="@id/ch2_level1"
                android:background="@drawable/dotted_line"
                android:rotation="135" />

            <!-- Level 2 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ch2_level2"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="150dp"
                android:layout_marginTop="120dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="42.5dp"
                app:cardElevation="6dp"
                app:rippleColor="@color/colorAccent_light"
                app:strokeColor="@color/colorAccent"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/star" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level 2"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Greeting Image with Card -->
            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="100dp"
                android:backgroundTint="@color/Baby_Blue"
                android:scaleType="centerCrop"
                android:src="@drawable/greeting" />

            <!-- Path Line 2 -->
            <View
                android:id="@+id/path_line2"
                android:layout_width="80dp"
                android:layout_height="3dp"
                android:layout_below="@id/ch2_level2"
                android:layout_alignStart="@id/ch2_level2"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/dotted_line"
                android:rotation="45" />

            <!-- Level 3 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ch2_level3"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_below="@id/ch2_level2"
                android:layout_marginStart="140dp"
                android:layout_marginTop="45dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="42.5dp"
                app:cardElevation="6dp"
                app:rippleColor="@color/colorAccent_light"
                app:strokeColor="@color/colorAccent"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/star" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level 3"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Path Line 3 -->
            <View
                android:id="@+id/path_line3"
                android:layout_width="100dp"
                android:layout_height="3dp"
                android:layout_below="@id/ch2_level3"
                android:layout_alignStart="@id/ch2_level3"
                android:layout_marginStart="-20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/dotted_line"
                android:rotation="-45" />

            <!-- Level 4 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ch2_level4"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_below="@id/ch2_level3"
                android:layout_marginStart="70dp"
                android:layout_marginTop="45dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="42.5dp"
                app:cardElevation="6dp"
                app:rippleColor="@color/colorAccent_light"
                app:strokeColor="@color/colorAccent"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/star" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level 4"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- High Five Image with Card -->

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/ch2_level3"
                android:layout_marginStart="70dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/ch2_level4"
                android:scaleType="centerCrop"
                android:src="@drawable/high_five" />

            <!-- Path Line 4 -->
            <View
                android:id="@+id/path_line4"
                android:layout_width="80dp"
                android:layout_height="3dp"
                android:layout_below="@id/ch2_level4"
                android:layout_alignStart="@id/ch2_level4"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/dotted_line"
                android:rotation="45" />

            <!-- Level 5 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ch2_level5"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_below="@id/ch2_level4"
                android:layout_marginStart="100dp"
                android:layout_marginTop="45dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="42.5dp"
                app:cardElevation="6dp"
                app:rippleColor="@color/colorAccent_light"
                app:strokeColor="@color/colorAccent"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/star" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level 5"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Business Image with Card -->

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/ch2_level5"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/business" />

            <!-- Path Line 5 -->
            <View
                android:id="@+id/path_line5"
                android:layout_width="100dp"
                android:layout_height="3dp"
                android:layout_below="@id/ch2_level5"
                android:layout_alignEnd="@id/ch2_level5"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="-20dp"
                android:background="@drawable/dotted_line"
                android:rotation="-45" />

            <!-- Level 6 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ch2_level6"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_below="@id/ch2_level5"
                android:layout_marginStart="20dp"
                android:layout_marginTop="55dp"
                android:layout_toEndOf="@id/ch2_level5"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="42.5dp"
                app:cardElevation="6dp"
                app:rippleColor="@color/colorAccent_light"
                app:strokeColor="@color/colorAccent"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/star" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level 6"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Path Line 6 -->
            <View
                android:id="@+id/path_line6"
                android:layout_width="80dp"
                android:layout_height="3dp"
                android:layout_below="@id/ch2_level6"
                android:layout_alignStart="@id/ch2_level6"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/dotted_line"
                android:rotation="45" />

            <!-- Test Node -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ch2_test"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@id/ch2_level6"
                android:layout_alignStart="@id/ch2_level6"
                android:layout_marginStart="10dp"
                android:layout_marginTop="45dp"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="45dp"
                app:cardElevation="8dp"
                app:rippleColor="@color/colorPrimary_light"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/test" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TEST"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>

        <!-- Bottom Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

    </LinearLayout>
</ScrollView>